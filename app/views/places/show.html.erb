
<%= tag.div nil, id: 'map', data: {places: @place.to_json(methods: [:full_address]) } %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @place.id %></th>
      <td><%= @place.name %></td>
      <td><%= @place.description %></td>
      <td>@mdo</td>
    </tr>
  </tbody>
</table>

<div id="likes">
  <%= render partial: "likes" %>
</div>