<div class="col-md-12">

  <app-map places="<%=@places.to_json(methods: [:full_address])%>"></app-map>
  
  
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>地點名稱</td>
        <td>描述</td>
        <td>latitude</td>
        <td>longitude</td>
      </tr>
    </thead>
    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td>#</td>
          <td><%= link_to(place.name, place_path(place)) %></td>
          <td><%= simple_format(place.description) %></td>
          <td>
            <%= place.latitude %>
          </td>
          <td>
            <%= place.longitude %>
          </td>
          <td>
              <%= link_to("Edit", edit_place_path(place), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", place_path(place),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "確定刪除?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>