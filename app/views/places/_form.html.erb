<div class="col-md-4 col-md-offset-4">
    <h2>新增地點</h2>
    <hr>
    <%= form_for @place do |f| %>
    地點名稱
    <%= f.text_field :name, class: "form-control" %>
    <br>
    叙述
    <br>
    <%= f.text_area :description, class: "form-control" %>
    <br>
    <div class="city-group">
        <%= f.select(:city, TaiwanCity.list, { include_blank: '--縣市--'}, { class: 'city-select'}) %>
        <%= f.select(:district, [], {include_blank: '--鄉鎮市區--'}, {class: 'city-select'}) %>
    </div>
        
      
    <br>
    <%= f.submit "Submit", :disable_with => 'Submiting...', class: "form-control" %>
    <% end %>
  </div>