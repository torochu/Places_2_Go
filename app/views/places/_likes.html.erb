<% if user_signed_in? && current_user.likes?(@place) %>
  <%= link_to "Unlike", place_like_path(@place), method: :delete, remote: true %>
<% else %>
  <%= link_to "Like", place_like_path(@place), method: :post, remote: true %>
<% end %>

<%= @place.likes.count %>

<% @place.likes.each do |like| %>
  <% if like.user.avatar.nil? %>
    <%= image_tag "https://fakeimg.pl/20x20" %>
  <% else %>
    <%= image_tag like.user.avatar, width: 20 %>
  <% end %>
<% end %>